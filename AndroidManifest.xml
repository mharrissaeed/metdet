<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.harissaeed.metaldetector"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        tools:ignore="UsesMinSdkAttributes" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        tools:ignore="AllowBackup" >
        <activity
            android:name="com.harissaeed.metaldetector.SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.harissaeed.metaldetector.SelectionScreen"
            android:label="@string/title_activity_selection_screen" >
        </activity>
        <activity
            android:name="com.harissaeed.metaldetector.MetalDetectorActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.harissaeed.metaldetector.MetalDetectorActivity" />
        </activity>
        <activity
            android:name="com.harissaeed.metaldetector.EMFDetectorActivity"
            android:label="@string/title_activity_emfdetector" >
        </activity>
        <activity
            android:name="com.harissaeed.metaldetector.Help"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>